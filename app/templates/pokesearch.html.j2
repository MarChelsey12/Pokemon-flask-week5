{% extends 'base.html.j2'%}

{% block title %}
Loading Pokedex
{% endblock %}
{% block content %}
    <h3>Which Pokemon do you want to learn more about?</h3>
    <form action="{{url_for('pokemonsearch')}}" method="POST">
        {{ form.hidden_tag() }}
        <div>
            {{ form.pokemon.label(class="form-label") }}
            {{ form.pokemon(class="form-control") }}
            {% for error in form.pokemon.errors %}
                <small style="color:red;">{{error}}</small>
            {% endfor %}        
        </div>
        <div>
            {{ form.submit(class="btn btn-primary form-control") }}
            <small style="color:red;">{{error}}</small>
        </div>
    </form>


{% endblock %}